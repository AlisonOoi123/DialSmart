# DialSmart Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Settings
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Oracle Database Configuration
ORACLE_USER=ds_user
ORACLE_PASSWORD=dsuser123
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE=orclpdb

# Alternative: Use full DATABASE_URL (overrides individual Oracle settings)
# DATABASE_URL=oracle+cx_oracle://ds_user:dsuser123@localhost:1521/?service_name=orclpdb

# Email Server Settings
# For Gmail:
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=noreply@dialsmart.my

# For Outlook/Hotmail:
# MAIL_SERVER=smtp.office365.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@outlook.com
# MAIL_PASSWORD=your-password

# Email Verification (set to true to require email verification on registration)
EMAIL_VERIFICATION_REQUIRED=false

# Admin Passkey (Change this in production!)
# Note: This is set in code (app/routes/auth.py), not here
# Default: DialSmart2024Admin!

# Production Settings (Uncomment for production)
# FLASK_ENV=production
